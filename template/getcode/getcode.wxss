.code {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9;
}
@keyframes enlarge{
  from{transform: scale(0.5);}
  to{transform:scale(1);}
}
.code_box {
  animation:enlarge 0.5s ease-in-out 1;
  position: relative;
  width: 72.5%;
  padding: 45rpx;
  background-color: #fff;
  border-radius: 5rpx;
  z-index: 10;
}
.code_item {
  padding: 15rpx;
}
.codeing{
  margin-top:30rpx;
  width:100%;
  height:100%;
  position: relative;
}
.code_title {
  margin-top:30rpx;
  display: block;
  font-size: 13pt;
  font-weight: bold;
  color: #999;
}
.code_input {
  font-size: 10pt;
  color: #ccc;
  height: 60rpx;
}
.show_code{
  border-radius: 2px;
  cursor: pointer;
  width: 216rpx;
  height: 60rpx;
  position: absolute;
  z-index: 2;
  right: 2rpx;
  top: 6rpx;
  bottom: 3rpx;
  display: inline;
  vertical-align:middle;
  visibility: visible;
}
.code_close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 45rpx;
  height: 45rpx;
}
.button-btn {
  cursor: pointer;
  line-height: 85rpx;
  height: 85rpx;
  background: #3199fc;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  margin: 30rpx 3%;
}
.btn-hover{background-color: #106a91; } 
