.index {
    background-color: #f7f7f7;
    position: relative;
    z-index: 0;
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.index_navbar{
    position: fixed;
    width: 100%;
    background-color: #99CCFF;
    z-index: 8;
    top:0;
    left: 0;
    translate: 0.5s;
}

.more{
    padding:0 6px;
    position: absolute;
    left: 8px;
    border-radius: 32px;
    z-index: 9;
    height: 32px;
    background-color: rgba(255, 255, 255, 0.5);
    box-sizing: border-box;
    border:1rpx rgba(255, 255, 255,0.3) solid;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
}
.more:active{
    opacity: 0.7;
}
.more .bind{
    width:18px;
    height: 18px;
    margin: 0 8px;
}
.more .border_center{
    width: 1px;
    height: 20px;
    background-color: rgba(255, 255, 255,0.3);
}
.nav-share{
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: none;
    box-sizing: content-box;
    line-height: 1;
}
.nav-share::after {
border: none;
}
.bg {
    width: 100%;
    height: 400rpx;
    position: absolute;
    background-image: linear-gradient(180deg,#99CCFF,#99CCFF,#f7f7f7);
    top: -150rpx;
    z-index: -2;
    border-radius: 0 0 18% 18%;
    transform: translateY(-80rpx);
    filter: blur(3rpx);
}

.model_title {
    text-align: center;
    margin: 10rpx auto;
    font-size: 36rpx;
    font-weight: bold;
}

.model_title .weekend{
   font-size: 22rpx;
}

.model_line {
    margin: 8rpx auto;
    background-color: #06e9c1;
    width: 66rpx;
    height: 8rpx;
    border-radius: 44rpx;
}

.tool_class {
    position: relative;
    display: block;
    width: 652rpx;
    min-height: 100rpx;
    margin: 10rpx auto;
    overflow: hidden;
    border-radius: 25rpx;
    background-color: #a8d5ef;
}

.tool_class .class_items {
    position: relative;
    width: 90%;
    margin-top: 20rpx;
    margin-left: 32rpx;
    color: #fff;
    font-size: 30rpx;
    display: flex;
    height: 40rpx;
    line-height: 40rpx;
}

.items_title {
    flex: 1;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.items_item {
    flex: 2;
    font-size: 25rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.items_position {
    text-align: center;
    font-size: 25rpx;
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.items_button {
    position: absolute;
    right: -10rpx;
    bottom: 10rpx;
    width: 85rpx;
    text-align: center;
    height: 30rpx;
    font-weight: bold;
    border-radius: 20rpx;
    border: 2px solid #fff;
    font-size: 25rpx;
    line-height: 28rpx;
    overflow: hidden;
    transform: 0.5s;
}

.items_button_active {
    transform: translateY(3rpx);
}

.index_head {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 10rpx;
    background-color: #f4f4f4;
}

.head_data {
    font-size: 16pt;
    color: #000;
    font-weight: bold;
}

.index_ad {
    display: block;
    width: 652rpx;
    margin: 10rpx auto;
    overflow: hidden;
    border-radius: 25rpx;
}

.index_ad ad {
    width: 100%;
}

.index_floor {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40rpx 0rpx 20rpx 0rpx;
}

.floor_logo {
    width: 100rpx;
    height: 100rpx;
}

.floor_data {
    padding-top: 15rpx;
    text-align: center;
    font-size: 8pt;
    color: #7a7775;
    font-weight: normal;
    font-style: italic;
}

.tools-swiper {
    height: 400rpx;
    background: #f7f7f7;
}

.tools {
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    padding-bottom: 10rpx;
    margin: 0rpx 14rpx;
}

.tools__item {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: calc(100%/3);
    transition: 0.3s;
}

.tools__item:active{
  opacity:0.8;
  transform: translateY(1px);
}

.navigate_hover{
  opacity:0.8;
  transform: translateY(1px);
}

.tools__icon {
    display: block;
    width: 214.5rpx;
    height: 100rpx;
    margin: 5rpx auto;
}

.tools__name {
    display: block;
    font-size: 10pt;
    font-weight: bold;
}

.main {
    padding-top: 30rpx;
}

.tool__icon {
    display: block;
    width: 675rpx;
    height: 248rpx;
    margin: 5rpx auto;
}

.head_swiper {
    width: 652rpx;
    overflow: hidden;
}

.tool__item {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    margin: 0rpx auto;
    border-radius: 35rpx;
    position: relative;
    height: 248rpx;
    background-size: cover;
    background-repeat: no-repeat;
    font-style: oblique;
}
.tool__item .item_title {
    max-width: 600rpx;
    box-sizing: border-box;
    position: absolute;
    left: 30rpx;
    bottom: 110rpx;
    font-weight: bold;
    font-size: 35rpx;
    color: azure;
    filter: alpha(Opacity=80);
    opacity: 0.8;
    max-height: 100rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-shadow: 2px 2px 0 rgba(252,27,17,0.5), -2px -2px 0 rgba(0,183,255,0.5);
    padding-bottom: 10rpx;
    padding-right: 10rpx;
    border-bottom: 1px dashed azure;
    overflow: hidden;
    /* transform: translate(0px ,1px); */
    animation: revolveScale 2s ease-in-out 12 alternate;
}

@keyframes revolveScale {
  40% {
    opacity: 0.4;
  }
  100% {
    transform: translate( 0 , 0)  scale(1);
    opacity: 1;
  }
}

.tool__item .item_author {
    width: 600rpx;
    position: absolute;
    left: 30rpx;
    bottom: 60rpx;
    font-size: 28rpx;
    color: azure;
    opacity: 0.8;
}

.tool__item .item_date {
    width: 600rpx;
    position: absolute;
    left: 30rpx;
    bottom: 20rpx;
    font-size: 23rpx;
    color: azure;
    opacity: 0.8;
}

.tool_bottom_linear {
    width: 100%;
    height: 60%;
    background-image: linear-gradient(0deg,rgba(0,0,0,.8),rgba(0,0,0,.5),rgba(0,0,0,0));
    bottom: 0rpx;
    position: absolute;
}

.tool_modules {
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    margin: 0rpx 35rpx;
    background-image: linear-gradient(180deg,#f7f7f7,rgba(197,249,244,.6),#f7f7f7);
}

.tool_info {
    position: relative;
    font-family: "Microsoft Yahei";
}

.tool_info .title {
    position: absolute;
    top: 45rpx;
    left: 50rpx;
    color: #ffffff;
    font-size: 20rpx;
}

.tool_info .firstText {
    position: absolute;
    top: 90rpx;
    left: 70rpx;
    color: #ffffff;
    font-size: 35rpx;
    font-weight: bold;
}

.tool_info .secondText {
    position: absolute;
    top: 140rpx;
    left: 70rpx;
    color: #ffffff;
    font-size: 35rpx;
    font-weight: bold;
}

.tool_info .loading {
    width: 32rpx;
    height: 22rpx;
    position: absolute;
    top: 105rpx;
    left: 260rpx;
}

.swiper_container {
    margin: 0rpx auto;
    height: 55rpx;
    width: 82%;
}

.swiper_item {
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 2px;
    text-align: center;
}

.img_filter {
    filter: grayscale(100%);
}

.img_block {
    filter: drop-shadow(8px 8px 10px gray);
}

.swiper_head {
    height: 285rpx;
}