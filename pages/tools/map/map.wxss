/* pages/map/map.wxss */
page{
  width: 100%;
  height: 100vh;
}
.head_box{
  width:400rpx;
  display: flex;
  margin:20rpx auto;
  height: 60rpx;
  border-radius:45rpx;
  background-color: rgba(255,255,255,.7);
  overflow: hidden;
}
.head_box .each_item{
  flex:1;
  line-height: 60rpx;
  text-align: center;
  font-size: 33rpx;
}
.head_box .item_red{
  background-color: rgba(253,66,3,.9);
  color:#fff;
}
.head_box .item_blue{
  background-color: 	rgba(11,161,249,.9);
  color:#fff;
}
.head{
  overflow-x: auto;
  height:7vh;
  white-space: nowrap;
}
.head .item{
  /* box-shadow: 0 0 3rpx 3rpx #FFB1B0; */
  display:inline-block;
  width:200rpx;
  height: 50rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color:#000;
  padding-bottom: 5rpx;
  margin:5rpx 8rpx 8rpx 8rpx;
}
.head .focus{
  /* color:#fff; */
  border-top:2px solid rgba(253,66,3,1);
  /* background-image :linear-gradient(120deg, rgba(253,66,3,1), rgba(253,66,3,1), rgba(253,66,3,1)); */
}
.head .focus_second{
  border-top:2px solid rgba(11,161,249,.9);
}
.second{
  width:100%;
  height:93vh;
}
.send{
  position: fixed;
  bottom:160rpx;
  right:50rpx;
}
.send .text{
  font-size: 23rpx;
  text-align: center;
  margin-top: 10rpx;
  color:rgba(253,66,3,.9);
  font-weight: bold;
  transform-origin: center center;
  animation: textFont 1s linear infinite;
}
@keyframes textFont{
  0%{transform: scale(1);opacity: 0.6;}
  50%{transform: scale(1);opacity: 1;}
  100%{transform: scale(1);opacity: 0.6;}
}
.send .img{
  width:80rpx;
  height:80rpx;
   /* animation: textFont 1s ease-in-out infinite;  */
}
@keyframes sendImg{
  0%{transform: rotate(13deg);}
  50%{transform: rotate(-13deg);}
  100%{transform: rotate(13deg);}
}
