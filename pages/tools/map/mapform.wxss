page{
  width:100%;
  height: 100vh;
  overflow: hidden;
}
.form{
  width:72%;
  height:850rpx;
  position: relative;
  background-color: 	rgba(205,203,203,.6);
  margin:40rpx auto;
  border-radius:20rpx;
  overflow: hidden;
  padding:60rpx;
}
.form .close{
  position: absolute;
  right: 0;
  top:0;
  width:80rpx;
  height: 80rpx;
}
.radio-title{
  width:300rpx;
  margin:20rpx auto;
  font-size: 35rpx;
}
.radio-type{
  margin:20rpx auto;
}
.radio-type .type-item{
  margin-bottom: 8rpx;
  display: block;
  font-size: 30rpx;
}
.select-position{
  margin:20rpx auto;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  bottom: 20rpx;
  font-size: 30rpx;
  color:#fff;
  background-color: rgba(181,179,179,.9);
  border-radius: 12rpx;
}
.select-focus{
  background-color: rgba(253,66,3,.9);
}
.position{
  text-align: center;
  margin:20rpx auto;
  font-size: 30rpx;
}
input{
  margin:20rpx auto;
  background-color: #fff;
  padding:10rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}
.bottom{
  margin-top:50rpx;
   color:#fff;
   background-color: rgba(253,66,3,.9);
   border-radius: 15rpx;
   font-size: 35rpx;
}
