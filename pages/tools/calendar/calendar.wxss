/* 头部 */
page{
  width:100%;
}
.calendar{
  position: relative;
}
.calendar__head {
  width:100%;
  height:100rpx; 
  background-color: #7f7f7f;
  text-align: center;
}
.calendar__weekly {
  line-height: 100rpx;
  margin: 0 auto;
  padding-bottom: 10rpx;
  font-size: 16pt;
  color: #fff;
  font-weight: bold;
}
.calendar__term,
.calendar__tip {
  font-size: 9pt;
  color: #999;
  font-weight: bold;
}
.calendar__term {
  color: #fff;
}

/* 主体 */
.calendar__main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 45rpx 80rpx;
}
.calendar__image {
  width: 100%;
  max-width: 660rpx;
  height: 1000rpx;
}
.calendar__tip {
  padding: 30rpx;
}
