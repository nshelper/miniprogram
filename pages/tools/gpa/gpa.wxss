/* 动画 */
@keyframes easeIn {
  from {
    opacity: 0;
    transform: scale(.8);
  }
  to {
     opacity: 1;
     transform: scale(1);
  }
}

.animation-easeIn {
  animation: 0.5s ease-in-out easeIn;
}

@keyframes easeOut {
  from {
     opacity: 1;
     transform: scale(1);
  }
  to {
    opacity: .3;
    transform: scale(0.5);
  }
}
.animation-easeOut {
  animation: 0.5s ease-in-out easeOut;
}

@keyframes easeTop {
  from {
    transform: translateY(200rpx)
 
  }
  to {
    transform: translateY(0)
  }
}
.animation-easeTop {
  animation: 0.4s ease easeTop;
}

