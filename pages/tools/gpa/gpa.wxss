page{
  height: 100%;
  overflow: hidden;
}
.gpa {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx;
  max-height: 100%;
  overflow-y: scroll;
  background-color: #f7f7f7;
}
.gpa-change {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 0 6rpx 6rpx #eee;
  border-radius: 20rpx;
  overflow: hidden;
}
.gpa__head {
  display: block;
  padding-bottom: 15rpx;
  border-bottom: solid 1rpx #eee;
  height:170rpx;
}
.gpa__title {
  margin-top:20rpx;
  font-size: 22pt;
  font-weight: bold;
  color: #000;
  text-align: center;
  
}
.gpa__ltitle {
  margin-top:40rpx;
  font-size: 8pt;
  font-weight: bold;
  color: #000;
  text-align: center; 
}
.ltitle_red {
  color: red;
}
.gpa__box {
  height:72vh;
  overflow: auto;
}
.gpa__item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
  padding: 30rpx 0;
  border-bottom: solid 1rpx #eee;
}
/* reset button */
button::after {
  content: '';
  width: 0;
  height: 0;
}
.gpa_info4{
  width:40%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 10pt;
  font-weight: bold;
  color: #434748;
}
.gpa_info3{
  width:30%;
  font-size: 10pt;
  font-weight: bold;
  color: #434748;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
}
.gpa_info2{
  width:20%;
  font-size: 10pt;
  font-weight: bold;
  text-align: center;
}
.gpa_info1{
  width:10%;
  font-size: 10pt;
  font-weight: bold;
  color: #434748;
}
.note2_item{
    display: block;
    font-size:28rpx;
    color:#000000;
    line-height: 40rpx;
    height: 120rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}
/* 底部样式 */
.floor{
  height: 100rpx;
  width:100%;
  background-color: rgba(201,204,203,0.5);
  position:fixed;
  bottom: 0rpx;
  font-size: 45rpx;
  color:red;
  text-align: center;
  display: flex;
  overflow: hidden;
}
.floor_option{
  display: block;
  flex:1;
  text-align: center;
}
.floor_button{
  margin-top:8rpx;
  width: 50%;
  height: 100%;
  background-color: rgba(0,0,0,0);
}
.floor_option image,.floor_button image{
  width:40rpx;
  height: 40rpx;
}
/* gpa添加数据 */
